<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.EditPuzzle"
    android:id="@+id/activity_edit_puzzle"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent" >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize" />

    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/content_view" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/center_button"
            android:background="@drawable/circle"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/up_arrow"
            android:id="@+id/up_button"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@id/center_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="5dp"/>

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/right_arrow"
            android:id="@+id/right_button"
            android:visibility="invisible"
            app:layout_constraintLeft_toRightOf="@id/center_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"/>

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/down_arrow"
            android:id="@+id/down_button"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@id/center_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="5dp"/>

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/left_arrow"
            android:id="@+id/left_button"
            android:visibility="invisible"
            app:layout_constraintRight_toLeftOf="@id/center_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout >
